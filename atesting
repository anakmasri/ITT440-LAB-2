#include <stdio.h>
#include <stdlib.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>
#include <string.h>

void anak(){
        char name[20];
        printf("Child name: ");
        scanf("%s", name);
        printf("Child name is %s\n", name);
}

void makpak(){
        printf("Parent is waiting for child processing..");
        wait(NULL);
        printf("Job is done.\n");
}

int main(void){
        pid_t pid = fork();
        char name[20];

        for(int i=1; i<5; i++){
                if(pid == 0){
                        anak();
                        exit(0);
                }
                else{
                        makpak();
                }
        }

        return EXIT_SUCCESS;
}
